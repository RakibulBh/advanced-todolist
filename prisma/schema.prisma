generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
  todos    Todo[] // One-to-many relation with Todo
}

model Category {
  id    String @id @default(uuid())
  name  String
  todos Todo[] // One-to-many relation with Todo
}

model Todo {
  id         String   @id @default(uuid())
  title      String
  done       Boolean  @default(false)
  due        DateTime
  userId     String // Foreign key for the relation
  user       User     @relation(fields: [userId], references: [id]) // Many-to-one relation with User
  categoryId String // Foreign key for the relation
  category   Category @relation(fields: [categoryId], references: [id]) // Many-to-one relation with Category
}
