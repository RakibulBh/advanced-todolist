generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id         String     @id @default(uuid())
  email      String     @unique
  password   String
  categories Category[]
}

model Category {
  id       String @id @default(uuid())
  name     String
  authorId String
  author   User   @relation(fields: [authorId], references: [id]) // Many-to-one relation with User
  todos    Todo[]
}

model Todo {
  id         String   @id @default(uuid())
  title      String
  done       Boolean  @default(false)
  due        String
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id]) // Many-to-one relation with Category
}
